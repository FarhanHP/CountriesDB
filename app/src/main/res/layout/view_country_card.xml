<?xml version="1.0" encoding="utf-8"?>
<layout
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">
  <merge>
    <com.google.android.material.card.MaterialCardView
      android:id="@+id/card"
      android:clickable="true"
      android:backgroundTint="@color/lightest_blue"
      app:cardUseCompatPadding="true"
      app:cardElevation="@dimen/cardview_default_elevation"
      app:cardCornerRadius="@dimen/space3"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:focusable="true">
      <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
          android:contentDescription="@string/country_flag"
          android:id="@+id/country_flag_img"
          android:layout_width="match_parent"
          android:layout_height="110dp"/>

        <TextView
          android:textColor="@color/black"
          android:layout_marginTop="@dimen/space1"
          android:textAlignment="center"
          android:textStyle="bold"
          android:textSize="18sp"
          android:id="@+id/country_name"
          android:layout_width="match_parent"
          android:layout_weight="1"
          android:layout_height="0dp"/>

        <com.farhanhp.countriesdb.views.favorite_button.FavoriteButtonView
          android:paddingVertical="@dimen/space2"
          android:paddingHorizontal="@dimen/space1"
          android:layout_margin="@dimen/space1"
          android:id="@+id/favorite_button"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>
      </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
  </merge>
</layout>
